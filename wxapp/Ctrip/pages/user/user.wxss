.user-hd_login {
    background-color: #deecef;
    width: 100%;
    height: 250rpx;
}
.user-hd_login .user-hd_title {
    font-size: 36rpx;
    width: 400rpx;
    padding-top: 48rpx;
    padding-bottom: 20rpx;
    color: #929898;
    letter-spacing:8rpx;
    margin: 0 auto;
    text-align: center;
}
.user-hd_login .btn-logo {
    background-color: #fe9913;
    color: #fff;
    border-radius: 50rpx;
    margin: 0 auto;
    width: 300rpx;
    height: 66rpx;
    line-height: 66rpx;
    font-size: 28rpx;
}
.orders {
    display: flex;
    align-content: space-between;
    flex-direction: row;
    /* margin-top: 50rpx; */
    padding-bottom: 30rpx;
    border-bottom:solid 30rpx #deecef;
}
.orders .orders-tour,
.orders .orders-fly,
.orders .orders-car,
.orders .orders-view {
    flex: 1;
    text-align: center
}
.orders image {
    width: 66rpx;
    height: 66rpx;
    display: block;
    /* display: inline-block; */
    text-align: center;
    padding-left: 60rpx;
    
}
.orders text {
    font-size: 28rpx;
    color: #bababa;
    text-align: center;
}

